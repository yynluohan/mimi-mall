.container {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    /*background-color: #F6F7FB;*/
}
.nav-view {
    display: flex;
    justify-content: space-around;
    font-size: 34rpx;
    padding: 20rpx;
    background-color: #FFF;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    border-top: 2rpx solid #F6F7FB;
    border-bottom: 2rpx solid #F6F7FB;
}
.appoint {
    padding-top: 80rpx;
}
.item-appoint {
    font-size: 30rpx;
    color: #888888;
    background-color: #FFF;
}
.flex-row {
    display: flex;
    padding: 20rpx 30rpx;
}
.no-data-view {
    height: 100%;
    text-align: center;
    opacity: 0.2;
    margin-top: 200rpx;
}

.no-data-img {
    width: 200rpx;
    height: 200rpx;
}


.appoint-body {
    display: flex;
    /*border-top: 4rpx solid #ececec;
    border-bottom: 4rpx solid #ececec;*/
    border-top: 2rpx solid #e4e4e4;
    border-bottom: 2rpx solid #e4e4e4;
    padding: 20rpx 30rpx;
}

.appoint-cover {
    width: 170rpx;
    height: 130rpx;
    border-radius: 10rpx;
}

.appoint-right {
    margin-left: 30rpx;
    flex: 1;
}
.appoint-name {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #000;
}
.appoint-name text {
    /*vertical-align: center;*/
}
.appoint-icon {
    width: 60rpx;
    height: 60rpx;
    /*vertical-align: center;*/
}
.appoint-address {
    width: 80%;
    font-size: 26rpx;
}

.foot-view {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 26rpx;
    padding: 20rpx 30rpx;
    border-bottom: 2rpx solid #e4e4e4;

}
.foot-btn {
    padding: 10rpx 16rpx;
    border: 2rpx solid #cccccc;
    border-radius: 10rpx;
}