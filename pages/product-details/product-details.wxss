/*--------弹窗--------*/
.attr-picker {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 50;
    /*background-color: #000;*/
    transition: 1s;
    /*animation: slidown 0.1s ease-in both;*/
}

.show {
    display: block;
}

.hide {
    display: none;
}

.picker-shadow {
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: 0;
    transition: 1s;
    z-index: 100;
}

.picker-shadow-on {
    opacity: 0.3;
}

.picker-box {
    background-color: #FFF;
    position: absolute;
    bottom: -1000rpx;
    left: 0;
    width: 100%;
    height: 460rpx;
    transition: .5s;
    overflow: hidden;
    z-index: 250;
}

.picker-box-show {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 250;
}

.picker-top {
    display: flex;
    /*padding: 20rpx 30rpx;*/
    border-bottom: 1rpx solid #e3e3e3;
    height: 220rpx;
}

.picker-good-text {
    font-size: 32rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    margin-left: 30rpx;
}

.picker-name {
    font-weight: bold;
	width: 450rpx;
	overflow: hidden;
    text-overflow: ellipsis;
	white-space: pre-wrap!important;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.picker-cover-view {
    width: 200rpx;
    z-index: 220;
}

