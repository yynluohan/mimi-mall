    justify-content: space-between;
    align-items: center;
    height: 80rpx;
    color: #666;
    padding: 0 30rpx;
}

.evaluation-more {
    display: flex;
    align-items: center;
}

.evaluation-more .right-arrow {
    margin-left: 20rpx;
}

