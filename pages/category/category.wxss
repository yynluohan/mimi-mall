/*----news最新动态------*/

.news {
    display: flex;
    flex-direction: column;
}
.news-cover {
    width: 680rpx;
    height: 220rpx;
    margin: 30rpx;
    border-radius: 16rpx;
}
.item-article {
    display: flex;
    margin: 30rpx;
    padding-bottom: 30rpx;
    border-bottom: 2rpx solid #F6F7FB;
}
.article-cover {
    width: 200rpx;
    height: 200rpx;
    margin-right: 20rpx;
}

.article-right {
    flex: 1;
    /*margin-bottom: 40rpx;*/
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    height: 220rpx;
}
.article-name {
    font-size: 32rpx;
    width: 450rpx;
    overflow: hidden;
    /*    text-overflow: ellipsis;
    white-space: nowrap;*/
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
.article-subtitle {
    font-size: 24rpx;
    width: 450rpx;
    color: #a6a6a6;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.article-foot {
    color: #a6a6a6;
    font-size: 28rpx;
    display: flex;
}
.article-foot .foot-view:nth-child(2) {
    margin-left: 40rpx;
    vertical-align: middle;
}

.foot-view text {
    vertical-align: middle;
}
.article-foot image {
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
}