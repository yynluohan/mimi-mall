.container {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: #F6F7FB;
    overflow: scroll;
}
.no-address {
    width: 100%;
    height: calc( 100% - 100rpx );
    color: #888888;
    background-color: #F6F7FB;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.no-address image {
    width: 240rpx;
    height: 130rpx;
    margin: 0 auto;
    margin-bottom: 30rpx;
}

.add-address {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background-color: #c28324;
    color: #FFF;
    font-size: 32rpx;
}

.font-icon {
    font-size: 40rpx;
}
.address-list {
    padding-bottom: 100rpx;
    overflow: scroll;
}
radio-group {

}


.item-address {
    /*display: flex;*/
    align-items: center;
    background-color: #fff;
    border-bottom: 2rpx solid #F6F7FB;
    padding: 30rpx 0;
    position: relative;
    width: 100%;
    height: 140rpx;
}
.item-body {
    display: flex;
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 200rpx;
    z-index: 30;
    background-color: #fff;
    
    /*position: absolute;*/
}
.del-btn {
    position: absolute;
    top: 0;
    right: 0;
    width: 120rpx;
    height: 100%;
    color: #FFF;
    background-color: #e51e1e;
    border-radius: 0;
    display: flex;
    align-items: center;
}
.sel-view {
    width: 140rpx;
    text-align: center;
    display: flex;
    align-items:center;
    justify-content:center;

}
.address-icon {

}
.radio-group {
    color: #c28324;
}
.radio-sel {
    color: #c28324;
}

.users {
    font-size: 32rpx;
    display: flex;
    justify-content: space-around;
}
.phone {
    /*margin: 0 40rpx;*/
    margin: auto;
}
.default {
    margin: auto;
    margin-right: 0;
    width: 70rpx;
}
.address-text {
    flex: 1;
    display: flex;
    margin-right: 20rpx;
    flex-direction: column;
    justify-content: center;
}

.address-value {
    color: #888888;
    font-size: 28rpx;
    margin-top: 10rpx;
}