.item-store {
    display: flex;
    padding: 20rpx 30rpx;
    margin: 20rpx;
    background-color: #FFF;
    border-radius: 20rpx;
    font-size: 26rpx;
    align-items: center;
}

.store-cover {
    width: 192rpx;
    height: 144rpx;
    border-radius: 10rpx;
    /*margin: 20rpx 0;*/
}

.store-right {
    flex: 1;
    margin-left: 28rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.store-name {
    font-size: 30rpx;
}

.store-address {
