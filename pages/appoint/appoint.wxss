@import "../../utils/template/tabBar/tabBar.wxss"

.container {
    background-color: #F6F7FB;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: scroll;
}

.location {
    display: flex;
    justify-content: space-between;
    padding: 10rpx 30rpx;
    border-bottom: 1rpx solid #F6F7FB;
    background-color: #FFF;
}

.location-left {
    display: flex;
    color: #666666;
    font-size: 26rpx;
}

.location-text {
    margin-left: 10rpx;
    width: 600rpx;
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.no-data-view {
    height: 100%;
    text-align: center;
    opacity: 0.2;
    margin-top: 200rpx;
}

.no-data-img {
    width: 200rpx;
    height: 200rpx;
}

