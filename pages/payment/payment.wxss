.container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #F6F7FB;
    color: #808080;
    font-size: 30rpx;
}

.payment-status {
    text-align: center;
    margin-top: 80rpx;
    color: #6c6c6c;
    font-size: 30rpx;
}
.icon-font {
    color: #FC5434;
    font-size: 80rpx;
}
.status-text {
    margin-top: 30rpx;
}
.pay-btn {
    padding: 20rpx;
    border-radius: 40rpx;
    width: 200rpx;
    margin: 20rpx auto;
}

.flex-row {
    display: flex;
    justify-content: space-between;
    font-size: 26rpx;
    margin: 0 50rpx;
    padding: 20rpx;
}
.good-item {
    padding: 10rpx 0;
    display: flex;
    justify-content: space-between;
}

.warn-text {
    font-size: 30rpx;
    text-align: center;
    padding: 50rpx;
}

.more-btn {
    color: #383838;
    text-align: center;
    width: 300rpx;
    padding: 20rpx 0;
    border: 2rpx solid #6C6C6C;
    border-radius: 40rpx;
    margin: 0 auto;
    background-color: #FFF;
}

.foot-view {
    display: flex;
    justify-content: space-around;
}

.foot-btn {
    padding: 20rpx 40rpx;
    border: 2rpx solid #6C6C6C;
    border-radius: 40rpx;
    background-color: #FFF;
    font-size: 26rpx;
}