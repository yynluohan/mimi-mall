.container {
	width: 100vw;
	overflow: hidden;
}
.userinfo {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-bottom: 20rpx;
    margin: 0 30rpx;
}

.member {
    display: flex;
    color: #c28324;
    font-size: 30rpx;
    align-items: center;
}

.member-img {
    width: 50rpx;
    height: 50rpx;
    margin-right: 14rpx;
    vertical-align: middle;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.nickname-btn {
    background-color: #FFF;
    color: #000;
    padding: 0;
    text-align: left;
}

.nickname-btn:after {
    border: none;
}


.flex-row {
    display: flex;
    justify-content: space-between;
    color: #505050;
    font-size: 30rpx;
    padding: 20rpx 30rpx;
    align-items: center;
}

.phone-btn {
    padding: 12rpx 20rpx;
    font-size: 30rpx;
    line-height: 1;
    margin: 0;
}

.menu {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    margin: 15rpx 15rpx 0 15rpx;
}

.item-menu {
    width: 210rpx;
    height: 210rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #383838;
    background-color: #f7f7f7;
    font-size: 28rpx;
    justify-content: center;
    /* margin: 20rpx 10rpx 0; */
    margin: 15rpx;
    position: relative;
}

.menu-img {
    width: 50rpx;
    height: 50rpx;
    margin-bottom: 20rpx;
}

.menu-num {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    background: #F5222D;
    color: #fff;
    padding: 0 10rpx;
    border-radius: 50rpx;
    font-size: 24rpx;
}